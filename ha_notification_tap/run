#!/usr/bin/with-contenv bashio
# ==============================================================================
# Start the notify-tap service
# ==============================================================================

cd /usr/src/app || exit 1

# Trap SIGTERM
trap 'kill -TERM $PID' TERM INT

# Start the service
python3 run.py &
PID=$!

# Wait for process to end
wait "$PID"

# Notify supervisor about service stop
s6-svscanctl -t /var/run/s6/services
